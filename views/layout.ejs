<body>
  <% if(alerts.success){ %> <% alerts.success.forEach(function(msg){ %>
  <div class="alert alert-success">
    <%= msg %>
  </div>
  <% }); %> <% } %> <% if(alerts.error){ %> <%
    alerts.error.forEach(function(msg){ %>
  <div class="alert alert-danger">
    <%= msg %>
  </div>
  <% }); %> <% } %> <% if(alerts.autherror){ %> <%
    alerts.autherror.forEach(function(msg){ %>
  <div class="alert alert-danger">
    Your <%= msg.param %> has <%= msg.msg %>
  </div>
  <% }); %> <% } %>


  <header>
    <div class="container">
      <h1 class="logo"><a href="/home">logo</a></h1>
      <nav>
        <ul class="navigation">
          <% if(currentUser) {%>
          <li> <a href="#"><%= currentUser.firstname %>'s Profile</a> </li>
          <li> <a href="/auth/setting">Setting</a></li>
          <li> <a href="/auth/logout">Logout</a></li>

          <%} %> <% if(!currentUser) {%>
          <li>
            <a href="/auth/signin">Signin</a> </li>
          <li> <a href="/auth/signup">Signup</a></li>
          <%} %>
        </ul>
      </nav>
    </div>
  </header>
